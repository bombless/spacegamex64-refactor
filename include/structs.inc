; STRUCTS.INC - Structure definitions and constants

IFNDEF STRUCTS_INC
STRUCTS_INC EQU 1

; SPRITE OBJECT STRUCTURE
SPRITEOBJ STRUCT
    MODE DW ?           ; 0 IF INACTIVE
    SPRITETILENUM DW ?
    X DW ?
    Y DW ?
SPRITEOBJ ENDS

; ENEMY OBJECT STRUCTURE
ENEMYOBJ STRUCT
    MODE DW ?           ; 0 IF INACTIVE
    SPRITE DW ?
    X DW ?
    Y DW ?
    HITBOXX DB ?        ; X & Y ARE OFFSET FROM TOP LEFT CORNER
    HITBOXY DB ?
    HITBOXW DB ?
    HITBOXH DB ?
    ALT DB ?            ; ALTITUDE
    TIMER DB ?          ; INTERNAL TIMER FOR SPRITE ANIMATIONS
ENEMYOBJ ENDS
ENEMYOBJSIZE = 0EH

; BOLT OBJECT STRUCTURE
BOLTOBJ STRUCT
    MODE DW ?           ; 0 IF INACTIVE
    SPRITE DW ?
    X DW ?
    Y DW ?
    HITBOXX DB ?        ; X & Y ARE OFFSET FROM TOP LEFT CORNER
    HITBOXY DB ?
    HITBOXW DB ?
    HITBOXH DB ?
    ALT DB ?            ; ALTITUDE
    TIMER DB ?          ; INTERNAL TIMER FOR SPRITE ANIMATIONS
BOLTOBJ ENDS
BOLTOBJSIZE = 0EH

